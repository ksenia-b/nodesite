@import 'variables.styl'

html, body
  padding:0
  margin:0
  font: font-size/line-height font-family-main
  color: color-text
  background-color: color-bg
  font-weight = font-weight-main

header, aside, article, footer
  padding: 8px

header, aside, footer
  text-align: center;

 header h1
   font: 48px font-family-header
   font-weight: font-weight-header
   color: color-header

aside
  nav a
    text-decoration: none
    color: color-nav-links
    padding: 8px
    &:hover
      color: color-nav-links-hov

footer
  font-size: 12px
  color: color-footer-color